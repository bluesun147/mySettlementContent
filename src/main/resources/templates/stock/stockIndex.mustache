{{> header}}

<h1>재고 관리</h1>

<form action="/content/stock/change" method="get">

    id : <select name="stockId">
        {{#stockIdList}}
            <option value="{{.}}">{{.}}</option>
        {{/stockIdList}}
    </select>

    수량 : <input type="number" name="amount" required>

    타입 : <select name="changeType">
    {{#changeTypeList}}
        <option value="{{.}}">{{.}}</option>
    {{/changeTypeList}}
    </select>

    <button type="submit">확인</button>
</form>

<hr>

<h1>재고 목록</h1>

<table border="1">
    <thead style="background-color: lightcoral">
    <tr>
        <th>ID</th>
        <th>OST</th>
        <th>수량</th>
        <th>버전</th>
        <th>업데이트일</th>
    </tr>
    </thead>
    <tbody>
    {{#stockList}}
        <tr>
            <td>{{id}}</td>
            <td>{{ost.id}}</td>
            <td>{{quantity}}</td>
            <td>{{version}}</td>
            <td>{{updatedAt}}</td>
        </tr>
    {{/stockList}}
    </tbody>
</table>

<style>
    .pagination { display: flex; list-style: none; padding: 0; justify-content: center!important; flex-wrap: wrap; }
    .pagination li.page-item a { display: block; padding: 0.5em 0.75em; border: 1px solid #dee2e6; margin-left: -1px; text-decoration: none; color: #0d6efd; }
    .pagination li.page-item.active a  { color: #fff; background-color: #0d6efd; }
</style>

<ul class="pagination">
    <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
    {{#pageIndex}}
        <li class="page-item"><a class="page-link" href="/content/stock/list?page={{.}}">{{.}}</a></li>
    {{/pageIndex}}
    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
</ul>